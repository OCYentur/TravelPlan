<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travelplan.app" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"        >

        <activity
            android:name="com.travelplan.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.travelplan.app.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.travelplan.app.SearchScreen"
            android:label="@string/title_activity_search_screen" >
            <intent-filter>
                <action android:name="com.travelplan.app.SearchScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.travelplan.app.PlacesScreen"
            android:label="@string/title_activity_places_screen" >
            <intent-filter>
                <action android:name="com.travelplan.app.PlacesScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.travelplan.app.DirectionsScreen"
            android:label="@string/title_activity_directions_screen" >
            <intent-filter>
                <action android:name="com.travelplan.app.DirectionsScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.travelplan.app.ManualNavigationScreen"
            android:label="@string/title_activity_manual_navigation_screen" >
            <intent-filter>
                <action android:name="com.travelplan.app.ManualNavigationScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.travelplan.app.TravelList"
            android:label="@string/title_activity_travel_list" >
            <intent-filter>
                <action android:name="com.travelplan.app.TravelList" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.travelplan.app.CreateTripScreen"
            android:label="@string/title_activity_create_trip_screen" >
            <intent-filter>
                <action android:name="com.travelplan.app.CreateTripScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
